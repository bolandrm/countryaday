source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib'

gem 'omniauth'
gem 'omniauth-facebook'
gem 'omniauth-twitter'
gem 'omniauth-google-oauth2'

group :development do
  gem 'guard'
  gem 'guard-shell'
  gem 'guard-less'
  gem 'guard-livereload'
  gem 'guard-rspec'
end

group :development, :test do
  gem 'rspec'
  gem 'capybara'
end
